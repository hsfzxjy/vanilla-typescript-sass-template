{
  "name": "vanilla-typescript-sass-template",
  "version": "1.0.0",
  "description": "A repository template for simple projects powered by vanilla TypeScript and Sass.",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "typesync": "typesync",
    "depcheck": "depcheck",
    "build": "gulp build",
    "watch": "gulp watch",
    "clean": "gulp clean",
    "lint": "tsc --noEmit && eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix",
    "format": "prettier --config .prettierrc '**/*.ts' '**/*.scss' --write"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/gulp": "^4.0.10",
    "@types/gulp-sass": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "gulp": "^4.0.2",
    "gulp-esbuild": "^0.11.1",
    "gulp-sass": "^5.1.0",
    "husky": "^8.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "sass": "^1.62.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "typesync": {
    "ignorePackages": [
      "prettier",
      "eslint",
      "eslint-plugin-prettier"
    ]
  }
}
